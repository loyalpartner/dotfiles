include {
  $HOME/dotfiles/sway/config.d/definitions
  $HOME/dotfiles/sway/config.d/keyboards
  $HOME/dotfiles/sway/config.d/autostarts
  $HOME/dotfiles/sway/config.d/applications
  $HOME/dotfiles/sway/config.d/inputs
  $HOME/dotfiles/sway/config.d/modes/default
  $HOME/dotfiles/sway/config.d/modes/shutdown
  $HOME/dotfiles/sway/config.d/modes/resize
}

smart_gaps on
gaps inner 5
default_border pixel 3
hide_edge_borders smart
focus_follows_mouse no
workspace_auto_back_and_forth yes

# client.focused "#9f1209" "#9f1209" "#ffffff" "#9f1209"


set $hider $HOME/dotfiles/sway/hider.sh
# bindsym $mod+ctrl+h [class="Emacs"] scratchpad show, resize set 95 ppt 95 ppt
# bindsym $mod+ctrl+t [class="Google-chrome" title="^(?!DevTools)"] scratchpad show
bindsym $mod+ctrl+n exec $hider '[class="Alacritty" workspace="__focused__"] focus'
bindsym $mod+ctrl+d [title="^Ozone X11$"] scratchpad show
# bindsym $mod+ctrl+s [class="(slack|Slack)"] scratchpad show
bindsym $mod+ctrl+c [title="^DevTools"] scratchpad show
bindsym $mod+ctrl+r [class="^Bytedance-feishu"] scratchpad show
bindsym $mod+ctrl+f [class="apifox"] scratchpad show
bindsym $mod+ctrl+w [instance="electronic-wechat"] scratchpad show
# 一键切换到 chrome
bindsym $mod+ctrl+t  exec $switch_to_chrome
# 切换到 alacritty 浮动窗口, 类似于下拉终端
# NOTE: 浮动窗口需要手动创建
bindsym $mod+ctrl+h [app_id="Alacritty"] scratchpad show
# 切换到 chatgpt 窗口
bindsym $mod+ctrl+s [app_id="chrome-chat.openai.com.*"] scratchpad show
bindsym Mod1+Tab exec swayr switch-to-urgent-or-lru-window
bindsym $mod+Tab workspace back_and_forth
bindsym $mod+p exec swayr switch-window
bindsym $mod+t exec rofi -show tabs --show-icon


bar swaybar_command waybar 

include /etc/sway/config.d/*
