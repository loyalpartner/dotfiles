for_window [class="XTerm"] opacity set 0.8
for_window [class="Zathura"] opacity set 0.8

# chromium floating
for_window [title="^Ozone X11$"] {
  move scratchpad
  scratchpad show
  move to output right
  resize set 1366 px 768 px
  move position center
}

