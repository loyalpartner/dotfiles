{
  "clangd.path": "clangd",
  "coc.preferences.rootPatterns":[
    ".git",
    ".hg",
    ".projections.json"
  ],
  "list.source.files.command": "rg",
  "list.source.files.args":["--files"],
  "list.source.files.defaultArgs": ["-F"],
  "list.source.files.excludePatterns":["**/node_modules/**"],
  "imselect.defaultInput": "com.apple.keylayout.Dvorak",
  "tsserver.disableAutomaticTypeAcquisition": true,
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"]
    }
  }
}
