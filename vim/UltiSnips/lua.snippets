# control flow
snippet do "do ... end" !w
do $0 end
endsnippet

snippet if "if ... then ... else" !w
if ${1:expr} then
  $0
end
endsnippet

snippet wh "while ... do ... end" !w
while ${1:expr} do
  $0
end
endsnippet

snippet while "while a[i] do ... end" !w
local ${1:name} = 1
while ${2:table}[$1] do
  $0
  $1 = $1 + 1
end
endsnippet

snippet repeat "repeat ... until ..." !w
repeat
  $0
until ${1:expr}
endsnippet

