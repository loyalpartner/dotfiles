# function ....
snippet print "print" !i
print(${1:"${2:text}"})
endsnippet

snippet type "type()" !i
type(${1:value})
endsnippet

snippet tonumber "tonumber(v)" !i
tonumber($1)
endsnippet

snippet tostring "tostring(v)" !i
tostring($1)
endsnippet
